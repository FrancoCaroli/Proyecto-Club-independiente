<div class="container mt-5">
  <h1 class="text-center" style="color: white;">Modificar el Evento N° {{evento.id}} </h1>
  <form action="/admin/eventos/modificar" method="post" enctype="multipart/form-data">
    <input type="hidden" value="{{evento.id}}" name="id">
    <div class="mb-3">
      <label for="titulo" class="form-label" style="color: white;">Título</label>
      <input type="text" class="form-control"  name="titulo" value="{{evento.titulo}}">
    </div>
    <div class="mb-3">
      <label for="subtitulo" class="form-label" style="color: white;">Subtítulo</label>
      <input type="text" class="form-control"  name="subtitulo" value="{{evento.subtitulo}}">
    </div>
    <div class="form-group">
      <p>
        <label style="color: white;">Imagen: <input type="file" name="imagen" id="imagen"></label>
      </p>
      <p>
        <label><input type="checkbox" name="img_delete" id="img_delete" value="1" style="color: white;">Eliminar imagen actual?</label>
        <input type="hidden" name="img_original" value="{{evento.img_id}}">
      </p>
    </div>
    <div class="mb-3">
      <label for="cuerpo" class="form-label" style="color: white;">Cuerpo</label>
      <textarea class="form-control"  name="cuerpo" rows="4" >{{evento.cuerpo}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary" >Modificar</button>
  </form>
  {{#if error}}
    <p>{{message}}</p>
  {{/if}}
</div>